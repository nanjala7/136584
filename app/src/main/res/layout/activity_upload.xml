<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uploadbkg"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="470dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/mint_border"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/uploadimage" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/mint"
            android:visibility="invisible" />


        <EditText
            android:id="@+id/uploadCaption"
            android:layout_width="255dp"
            android:layout_height="126dp"
            android:layout_weight="0.9"
            android:background="@drawable/mint_border"
            android:hint="Add a caption..."
            android:padding="16dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:backgroundTint="@color/mint"
            android:contentDescription="@string/common_google_play_services_enable_button"
            android:src="@drawable/baseline_send_24"
            app:tint="@color/white" />


    </LinearLayout>

</LinearLayout>